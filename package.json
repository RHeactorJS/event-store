{
  "name": "@rheactorjs/event-store",
  "description": "Implementation of an event store based on redis",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "scripts": {
    "test": "NODE_ENV=testing mocha --compilers js:babel-register --reporter=dot --timeout=100 test/\\*.js",
    "test:coverage": "NODE_ENV=nyc babel src --out-dir instrumented-src > /dev/null && nyc --reporter=text-summary --reporter=lcov npm run test",
    "test:coverage-travis": "npm run test:coverage && codeclimate-test-reporter < ./coverage/lcov.info && rm -rf ./coverage",
    "lint": "standard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "npm run lint && npm test",
    "commitmsg": "validate-commit-msg"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RHeactorJS/event-store.git"
  },
  "author": "Resourceful Humans GmbH <info@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RHeactorJS/event-store/issues"
  },
  "homepage": "https://github.com/RHeactorJS/event-store#readme",
  "dependencies": {
    "redis": "^2.6.5"
  },
  "dependencies": {
    "@rheactorjs/errors": "1.x",
    "bluebird": "^3.4.7",
    "tcomb": "^3.2.16"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-env": "^1.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "husky": "^0.13.1",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.2.0",
    "nyc": "^10.1.2",
    "semantic-release": "^6.3.2",
    "standard": "^10.0.1",
    "validate-commit-msg": "^2.11.1"
  },
  "files": [
    "dist",
    "src",
    "test",
    "README.md"
  ],
  "engines": {
    "node": ">=6.10.2"
  }
}
